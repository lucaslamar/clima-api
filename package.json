{
  "name": "node-template",
  "version": "1.0.0",
  "description": "Template for Node.js projects updated 27/11/2020 ",
  "main": "start.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "migrate": "yarn sequelize db:migrate",
    "seed": "yarn sequelize db:seed:all",
    "build": "sucrase ./src -d ./dist --transforms imports",
    "start": "node dist/server.js",
    "dev": "yarn && yarn migrate && nodemon src/server.js",
    "docker": "docker exec -it api-your sh",
    "lint": "eslint src --max-warnings 5",
    "unit:createdb": "NODE_ENV=test sequelize db:create",
    "unit:dropdb": "NODE_ENV=test sequelize db:drop",
    "preunit": "NODE_ENV=test sequelize db:migrate",
    "unit": "NODE_ENV=test jest --maxWorkers=1 --detectOpenHandles",
    "postunit": "NODE_ENV=test sequelize db:migrate:undo:all",
    "test": "yarn lint && yarn unit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourUrl.git"
  },
  "keywords": [
    "node",
    "nodeJS",
    "express"
  ],
  "author": "Belle Epoque",
  "license": "AGPL-3.0",
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "bugs": {
    "url": "https://github.com/yourUrl/issues"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-redis": "^4.0.4",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "module-alias": "^2.2.2",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.5.0",
    "passport-twitter": "^1.0.4",
    "path": "^0.12.7",
    "pg": "^7.18.1",
    "pg-hstore": "^2.3.3",
    "redis": "^2.8.0",
    "sequelize": "^5.21.3",
    "socket.io": "^2.3.0",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@sucrase/jest-plugin": "^2.0.0",
    "@types/jest": "^26.0.15",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^6.0.0",
    "install": "^0.13.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.2.0",
    "sequelize-cli": "^6.2.0",
    "sucrase": "^3.16.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
